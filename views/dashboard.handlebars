<div class="container">
    <div class="row mt-5">
        <h1>Welcome back, {{userData.username}}!</h1>
        <div class="card col-12 my-5">
            <div class="card-body">
                <h2 class="card-title  mt-2 mb-3">Create a New Post</h2>
                <form>
                    <div class="mb-3">
                        <label for="blogTitleInput" class="form-label">Post Title</label>
                        <input type="email" class="form-control" id="blogTitleInput" placeholder="Title">
                      </div>
                      <div class="mb-3">
                        <label for="blogContentInput" class="form-label">Post Content</label>
                        <textarea class="form-control" id="blogContentInput" rows="6" placeholder="Content"></textarea>
                    </div>
                    <div class="d-grid gap-2 my-3">
                        <button type="button" class="btn btn-dark">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <h1>My Posts</h1>
    </div>
    <div class="row d-flex justify-content-center my-4">
    {{!-- {{#each userBlogs}} --}}
        <div class="card col-12">
            <div class="card-body">
              <h5 class="card-title">
                  {{!-- {{userBlogs.title}} --}}
                  </h5>
              <p class="card-text">Date of Creation</p>
              <a href="#" class="btn btn-dark">Read More</a>
            </div>
        </div>
    {{!-- {{/each}} --}}
    </div>

</div>
<script src="/js/dashboard.js"></script>